<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox styleClass="menuScene"
      alignment="CENTER"
      spacing="20"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.view.DifficultySelectionController">

    <Text fx:id="selectDifficulty" styleClass="title" />

    <VBox alignment="CENTER" spacing="15">
        <Button fx:id="selectEasyButton" text="Easy" onAction="#selectEasy" styleClass="menu-button" />
        <Button fx:id="selectMediumButton" text="Medium" onAction="#selectMedium" styleClass="menu-button" />
        <Button fx:id="selectHardButton" text="Hard" onAction="#selectHard" styleClass="menu-button" />
        <Button fx:id="goBackButton" text="Cancel" onAction="#cancel" styleClass="menu-button" />
    </VBox>


</VBox>
