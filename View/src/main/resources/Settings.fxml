<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER"
      spacing="20"
      styleClass="menuScene"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.view.SettingsController">

    <ComboBox fx:id="languageComboBox" layoutX="10" layoutY="10" prefWidth="150" />

    <VBox fx:id="authorsBox" alignment="CENTER" styleClass="authors">
    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="applyButton" styleClass="menu-button" onAction="#apply"/>
        <Button fx:id="backToMenuButton" styleClass="menu-button" onAction="#backToMenu"/>
    </HBox>
</VBox>
