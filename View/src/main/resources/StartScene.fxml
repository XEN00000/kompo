<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox styleClass="menuScene"
      alignment="CENTER"
      spacing="20"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.view.MenuController">

   <!-- TytuÅ‚ gry -->
   <Text fx:id="gameTitle" styleClass="title"  />

   <!-- Przyciski menu -->
   <Button fx:id="newGameButton" onAction="#newGame" styleClass="menu-button" />
   <Button fx:id="loadGameButton" onAction="#loadGame" styleClass="menu-button" />
   <Button fx:id="settingsButton" onAction="#settings" styleClass="menu-button" />
   <Button fx:id="exitButton" onAction="#exit" styleClass="menu-button" />
</VBox>
